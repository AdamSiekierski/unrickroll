/* Base TypeScript configuration for all the bundles */
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
